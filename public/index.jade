li = 0
each article, slug in public.articles._data
  if (li < articles_home)
    - li = li + 1
    article.content
      section.main
        .article
          span.date= article.date
          h2
            a(href='/articles/#{ slug }') #{ article.title }
          if article.breakout
            img.breakout(src='#{ article.breakout }')
          if article.caption
            span.caption #{ article.caption }
          != partial("/articles/" + slug, article)